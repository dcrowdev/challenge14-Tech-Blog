<div class="container-center d-flex justify-content-center align-items-center flex-column">
    <h2 class="text-center">Your Dashboard</h2>
    {{#if posts.length}}
    {{#each posts as |post|}}
    <div class="card-sm mt-3">
        <a href="/post/{{id}}">
            <div class="card-header">
                {{post_title}}
            </div>
        </a>
        <div class="card-body">
            {{post_body}}
            <span><a href="dashboard/delete/{{post.id}}">delete</a><span>
        </div>
    </div>
    {{/each}}
    {{else}}
    <h4 class="text-center">You do not currently have any posts.</h4>
    {{/if}}
</div>
        <div class="container-sm text-center d-flex flex-column align-items-center justify-content-center">
            <h2>New Post</h2>
        <form class="login-form">
            <div class="form-outline mb-4">
                <label class="form-label" for="title">Title</label>
                <input type="text" id="title" class="form-control" />
            </div>
            <div class="form-outline mb-4">
                <label class="form-label" for="body">Text</label>
                <textarea row="10" id="body" class="form-control"></textarea>
            </div>
        </form>
        <button type="submit" id="create-post" class="btn btn-primary btn-block mb-4">Create Post</button>
    </div>

